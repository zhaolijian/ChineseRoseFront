/**
 * 空状态组件样式
 */

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-xl) var(--space-lg);
  min-height: 400rpx;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  max-width: 600rpx;
}

/* ==================== 图片区域 ==================== */
.empty-image {
  margin-bottom: var(--space-lg);
  opacity: 0.6;
  transition: opacity 0.3s ease;
}

.empty-image:active {
  opacity: 0.8;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  display: block;
}

/* ==================== 文字区域 ==================== */
.empty-title {
  font-size: var(--font-lg);
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: var(--space-sm);
  line-height: 1.4;
}

.empty-description {
  font-size: var(--font-md);
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: var(--space-xl);
  white-space: pre-line;
}

/* ==================== 按钮区域 ==================== */
.empty-action {
  margin-top: var(--space-md);
}

.empty-button {
  min-width: 200rpx !important;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%) !important;
  border: none !important;
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.3) !important;
}

/* ==================== 不同类型的样式变化 ==================== */
.empty-state[data-type="error"] .empty-title {
  color: var(--error-color);
}

.empty-state[data-type="no-network"] .empty-title {
  color: var(--warning-color);
}

.empty-state[data-type="search"] .empty-description {
  color: var(--text-hint);
}

/* ==================== 响应式适配 ==================== */
@media screen and (max-width: 375px) {
  .empty-state {
    padding: var(--space-lg) var(--space-md);
  }
  
  .empty-icon {
    width: 160rpx;
    height: 160rpx;
  }
  
  .empty-title {
    font-size: var(--font-md);
  }
  
  .empty-description {
    font-size: var(--font-sm);
  }
}

/* ==================== 动画效果 ==================== */
.empty-content {
  animation: fadeInUp 0.5s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.empty-image {
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

/* ==================== 加载状态 ==================== */
.empty-state.loading .empty-icon {
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.6;
  }
  50% {
    opacity: 1;
  }
}