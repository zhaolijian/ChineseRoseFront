/**
 * 首页（书架）样式文件
 */

.page {
  min-height: 100vh;
  background-color: var(--bg-secondary);
}

/* ==================== 搜索头部 ==================== */
.search-header {
  background: linear-gradient(135deg, #4A90E2 0%, #6BA3F0 100%);
  padding: var(--space-md) var(--space-md) var(--space-sm);
}

.scan-icon {
  padding: var(--space-xs);
}

/* ==================== 统计信息区域 ==================== */
.stats-section {
  margin: var(--space-md);
  margin-bottom: var(--space-sm);
}

.stats-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  border-radius: var(--radius-medium);
  padding: var(--space-lg);
  display: flex;
  justify-content: space-around;
  box-shadow: var(--shadow-light);
  border: 1px solid #e8f3ff;
}

.stats-item {
  text-align: center;
}

.stats-number {
  font-size: var(--font-xxl);
  font-weight: bold;
  color: var(--primary-color);
  line-height: 1;
  margin-bottom: var(--space-xs);
}

.stats-label {
  font-size: var(--font-sm);
  color: var(--text-secondary);
}

/* ==================== 快速操作区 ==================== */
.quick-actions {
  margin: var(--space-md);
  background-color: var(--bg-primary);
  border-radius: var(--radius-medium);
  padding: var(--space-md);
  box-shadow: var(--shadow-light);
}

/* ==================== 筛选区域 ==================== */
.filter-section {
  background-color: var(--bg-primary);
  border-bottom: 1px solid var(--border-light);
}

/* ==================== 工具栏 ==================== */
.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-md);
  background-color: var(--bg-primary);
  border-bottom: 1px solid var(--border-light);
}

.sort-options {
  flex: 1;
}

.view-toggle {
  padding: var(--space-xs);
  margin-left: var(--space-md);
}

/* ==================== 书籍列表容器 ==================== */
.books-container {
  flex: 1;
  padding: var(--space-md);
  padding-bottom: 120rpx; /* 为FAB留出空间 */
}

/* ==================== 网格视图样式 ==================== */
.books-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(140rpx, 1fr));
  gap: var(--space-md);
}

.book-card {
  background-color: var(--bg-primary);
  border-radius: var(--radius-medium);
  padding: var(--space-md);
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
}

.book-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-medium);
}

.book-cover {
  position: relative;
  margin-bottom: var(--space-sm);
  display: flex;
  justify-content: center;
}

.book-status {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  border-radius: var(--radius-small);
  padding: 2rpx 6rpx;
  font-size: var(--font-xs);
}

.book-status.finished {
  background-color: var(--success-color);
  color: white;
}

.book-status.wishlist {
  background-color: var(--warning-color);
  color: white;
}

.status-text {
  font-size: var(--font-xs);
  line-height: 1.2;
}

.book-info {
  text-align: center;
}

.book-title {
  font-size: var(--font-sm);
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: var(--space-xs);
  height: 2.4em;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.book-author {
  font-size: var(--font-xs);
  color: var(--text-secondary);
  margin-bottom: var(--space-sm);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.book-progress {
  margin-bottom: var(--space-sm);
}

.progress-text {
  font-size: var(--font-xs);
  color: var(--text-hint);
  text-align: center;
  margin-top: var(--space-xs);
}

.book-stats {
  display: flex;
  justify-content: center;
}

/* ==================== 列表视图样式 ==================== */
.books-list {
  background-color: var(--bg-primary);
  border-radius: var(--radius-medium);
  overflow: hidden;
  box-shadow: var(--shadow-light);
}

.book-item {
  display: flex;
  padding: var(--space-md);
  border-bottom: 1px solid var(--border-light);
  transition: background-color 0.3s ease;
}

.book-item:last-child {
  border-bottom: none;
}

.book-item:active {
  background-color: var(--bg-tertiary);
}

.book-cover-small {
  margin-right: var(--space-md);
  flex-shrink: 0;
}

.book-content {
  flex: 1;
  min-width: 0; /* 防止内容溢出 */
}

.book-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--space-xs);
}

.book-title {
  font-size: var(--font-md);
  font-weight: bold;
  color: var(--text-primary);
  flex: 1;
  margin-right: var(--space-sm);
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.book-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-sm);
}

.book-author {
  font-size: var(--font-sm);
  color: var(--text-secondary);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 200rpx;
}

.book-category {
  font-size: var(--font-xs);
  color: var(--text-hint);
  background-color: var(--bg-tertiary);
  padding: 4rpx 8rpx;
  border-radius: var(--radius-small);
}

.book-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.note-count {
  display: flex;
  align-items: center;
}

.count-text {
  font-size: var(--font-xs);
  color: var(--text-hint);
  margin-left: 4rpx;
}

.last-read {
  font-size: var(--font-xs);
  color: var(--text-hint);
}

/* ==================== 空状态样式 ==================== */
.empty-state {
  padding: var(--space-xl) var(--space-md);
  text-align: center;
}

.empty-action {
  margin-top: var(--space-md);
  width: 200rpx;
}

/* ==================== 加载状态样式 ==================== */
.loading-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-xl);
}

/* ==================== 浮动按钮样式 ==================== */
.fab {
  position: fixed;
  bottom: 120rpx; /* 在tabbar上方 */
  right: var(--space-lg);
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.4);
  z-index: var(--z-index-fixed);
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.6);
}

/* ==================== 响应式适配 ==================== */
@media screen and (max-width: 375px) {
  .books-grid {
    grid-template-columns: repeat(auto-fill, minmax(120rpx, 1fr));
    gap: var(--space-sm);
  }
  
  .stats-card {
    padding: var(--space-md);
  }
  
  .stats-number {
    font-size: var(--font-xl);
  }
}

@media screen and (min-width: 414px) {
  .books-grid {
    grid-template-columns: repeat(auto-fill, minmax(160rpx, 1fr));
  }
}

/* ==================== 主题适配（深色模式预留） ==================== */
@media (prefers-color-scheme: dark) {
  .stats-card {
    background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
    border-color: #333;
  }
  
  .stats-number {
    color: var(--primary-light);
  }
}