<view class="page">
  <view class="toolbar">
    <van-button size="small" type="primary" round bind:click="onSave" loading="{{ saving }}">保存</van-button>
  </view>

  <textarea
    class="editor"
    value="{{ content }}"
    placeholder="开始编辑你的笔记..."
    auto-height
    fixed
    maxlength="-1"
    cursor-spacing="80"
    bind:input="onContentChange"
    bind:tap="onContentTap"
  />

  <view class="hint">自动保存已开启（3秒无输入自动保存）</view>

  <view class="loading" wx:if="{{ loading }}">
    <van-loading size="24px" type="spinner">加载中...</van-loading>
  </view>
</view>

