.page { padding: 24rpx; }
.header { display: flex; gap: 24rpx; background: #fff; border-radius: 16rpx; padding: 24rpx; box-shadow: 0 4rpx 16rpx rgba(0,0,0,.04); }
.cover { width: 160rpx; height: 220rpx; border-radius: 12rpx; background: #f5f5f5; }
.meta { display: flex; flex-direction: column; gap: 8rpx; flex: 1; }
.title { font-size: 34rpx; font-weight: 600; line-height: 1.4; }
.author { color: #969799; }
.stats { margin-top: auto; font-size: 24rpx; color: #969799; }
.toolbar { margin: 24rpx 0; }
.section { margin-top: 24rpx; background: #fff; border-radius: 16rpx; padding: 16rpx; }
.section-title { padding: 8rpx 16rpx; color: #323233; font-weight: 600; }
.loading { margin-top: 24rpx; display: flex; justify-content: center; }
