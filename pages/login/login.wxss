/**
 * 登录页面样式文件
 */

.login-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

/* ==================== 背景装饰 ==================== */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: 10%;
  right: -50rpx;
  animation-delay: 0s;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: 60%;
  left: -75rpx;
  animation-delay: 2s;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 30%;
  left: 20%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-20px);
  }
}

/* ==================== 主要容器 ==================== */
.login-container {
  position: relative;
  z-index: 1;
  padding: var(--space-xl) var(--space-lg);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* ==================== 品牌区域 ==================== */
.brand-section {
  text-align: center;
  margin-bottom: var(--space-xl);
}

.app-logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: var(--space-lg);
}

.app-name {
  font-size: 64rpx;
  font-weight: bold;
  color: white;
  margin-bottom: var(--space-sm);
  text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

.app-slogan {
  font-size: var(--font-md);
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: var(--space-xl);
}

/* ==================== 登录表单 ==================== */
.login-form {
  margin-bottom: var(--space-xl);
}

.login-button {
  width: 100% !important;
  margin-bottom: var(--space-lg) !important;
  background: linear-gradient(135deg, #4A90E2 0%, #6BA3F0 100%) !important;
  border: none !important;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.4) !important;
}

.wx-login-button {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #6BA3F0 100%);
  border: none;
  border-radius: 44rpx;
  color: white;
  font-size: var(--font-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--space-lg);
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.4);
}

.wx-login-button::after {
  border: none;
}

.button-text {
  margin-left: var(--space-sm);
}

.guest-login {
  margin-top: var(--space-md);
}

.guest-button {
  width: 100% !important;
  background: rgba(255, 255, 255, 0.2) !important;
  border: 2rpx solid rgba(255, 255, 255, 0.5) !important;
  color: white !important;
}

/* ==================== 功能特色 ==================== */
.features-section {
  margin-bottom: var(--space-xl);
}

.feature-title {
  text-align: center;
  font-size: var(--font-lg);
  font-weight: bold;
  color: white;
  margin-bottom: var(--space-lg);
}

.features-list {
  background: rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-medium);
  padding: var(--space-lg);
  backdrop-filter: blur(10px);
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: var(--space-md);
  padding: var(--space-sm) 0;
}

.feature-item:last-child {
  margin-bottom: 0;
}

.feature-text {
  font-size: var(--font-md);
  color: white;
  margin-left: var(--space-md);
}

/* ==================== 协议区域 ==================== */
.agreement-section {
  margin-bottom: var(--space-lg);
}

.agreement-text {
  text-align: center;
  font-size: var(--font-sm);
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
}

.link-text {
  color: #FFE066;
  text-decoration: underline;
}

/* ==================== 底部信息 ==================== */
.footer-section {
  margin-top: auto;
  padding-top: var(--space-lg);
}

.contact-info {
  text-align: center;
  margin-bottom: var(--space-sm);
}

.contact-info text {
  font-size: var(--font-sm);
  color: rgba(255, 255, 255, 0.7);
}

.contact-link {
  color: #FFE066 !important;
  margin-left: var(--space-xs);
}

.version-info {
  text-align: center;
  font-size: var(--font-xs);
  color: rgba(255, 255, 255, 0.5);
}

/* ==================== 隐私协议弹窗 ==================== */
.privacy-modal {
  padding: var(--space-lg);
}

.privacy-header {
  text-align: center;
  margin-bottom: var(--space-lg);
}

.privacy-title {
  font-size: var(--font-xl);
  font-weight: bold;
  color: var(--text-primary);
}

.privacy-content {
  max-height: 600rpx;
  margin-bottom: var(--space-lg);
}

.privacy-section {
  margin-bottom: var(--space-lg);
}

.privacy-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: var(--font-lg);
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: var(--space-sm);
}

.section-text {
  font-size: var(--font-md);
  color: var(--text-secondary);
  line-height: 1.6;
  white-space: pre-line;
}

.privacy-footer {
  border-top: 1px solid var(--border-light);
  padding-top: var(--space-lg);
}

/* ==================== 响应式适配 ==================== */
@media screen and (max-width: 375px) {
  .app-logo {
    width: 120rpx;
    height: 120rpx;
  }
  
  .app-name {
    font-size: 48rpx;
  }
  
  .features-list {
    padding: var(--space-md);
  }
}

/* ==================== 深色模式适配 ==================== */
@media (prefers-color-scheme: dark) {
  .login-page {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }
}