.page { padding: 24rpx; }
.profile-card { display: flex; align-items: center; background: #fff; border-radius: 16rpx; padding: 24rpx; box-shadow: 0 4rpx 16rpx rgba(0,0,0,.04); }
.avatar { width: 120rpx; height: 120rpx; border-radius: 50%; margin-right: 24rpx; background: #f5f5f5; }
.info { display: flex; flex-direction: column; gap: 8rpx; }
.name { font-weight: 600; font-size: 32rpx; }
.uid, .phone { color: #969799; font-size: 24rpx; }
.actions { margin-top: 24rpx; }
.login-panel { margin-top: 80rpx; display: flex; flex-direction: column; align-items: center; }
.login-btn { margin-top: 24rpx; width: 60%; }

