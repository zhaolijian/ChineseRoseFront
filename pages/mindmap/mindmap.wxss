.page { padding: 16rpx; }
.card { display: flex; background: #fff; border-radius: 16rpx; overflow: hidden; margin-bottom: 16rpx; box-shadow: 0 4rpx 16rpx rgba(0,0,0,.04); }
.preview { width: 280rpx; height: 200rpx; background: #f5f5f5; }
.meta { padding: 16rpx; display: flex; flex-direction: column; justify-content: space-between; }
.title { font-weight: 600; }
.time { color: #969799; font-size: 24rpx; }
.loading { margin-top: 24rpx; display: flex; justify-content: center; }
.empty { margin-top: 80rpx; }

