<view class="page">
  <view class="list" wx:if="{{ maps.length > 0 }}">
    <view class="card" wx:for="{{ maps }}" wx:key="id">
      <image class="preview" src="{{ item.previewUrl }}" mode="aspectFill" bind:tap="onPreview" data-url="{{ item.previewUrl }}" />
      <view class="meta">
        <view class="title">{{ item.bookTitle || ('书籍#' + item.bookId) }}</view>
        <view class="time">{{ formatTime(item.updatedAt) }}</view>
      </view>
    </view>
  </view>

  <view class="empty" wx:if="{{ !loading && maps.length === 0 }}">
    <van-empty description="暂无导图" />
  </view>

  <view class="loading" wx:if="{{ loading }}">
    <van-loading size="24px" type="spinner">加载中...</van-loading>
  </view>
</view>

