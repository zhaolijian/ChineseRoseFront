/**
 * 阅记小程序 - 全局样式文件
 * 定义全局变量、通用样式、重置样式等
 */

/* ==================== 全局 CSS 变量 ==================== */
page {
  /* 主色调 */
  --primary-color: #4A90E2;
  --primary-light: #6BA3F0;
  --primary-dark: #2D5AA0;
  
  /* 辅助色 */
  --secondary-color: #50C878;
  --accent-color: #FF6B35;
  --warning-color: #FFA726;
  --error-color: #F44336;
  --success-color: #4CAF50;
  
  /* 中性色 */
  --text-primary: #212121;
  --text-secondary: #757575;
  --text-disabled: #BDBDBD;
  --text-hint: #9E9E9E;
  
  /* 背景色 */
  --bg-primary: #FFFFFF;
  --bg-secondary: #F5F7FA;
  --bg-tertiary: #EEEFF2;
  --bg-disabled: #FAFAFA;
  
  /* 边框色 */
  --border-light: #E0E0E0;
  --border-medium: #BDBDBD;
  --border-dark: #757575;
  
  /* 阴影 */
  --shadow-light: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  --shadow-medium: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  --shadow-heavy: 0 8rpx 24rpx rgba(0, 0, 0, 0.18);
  
  /* 圆角 */
  --radius-small: 8rpx;
  --radius-medium: 16rpx;
  --radius-large: 24rpx;
  --radius-round: 50%;
  
  /* 间距 */
  --space-xs: 8rpx;
  --space-sm: 16rpx;
  --space-md: 24rpx;
  --space-lg: 32rpx;
  --space-xl: 48rpx;
  
  /* 字体大小 */
  --font-xs: 20rpx;
  --font-sm: 24rpx;
  --font-md: 28rpx;
  --font-lg: 32rpx;
  --font-xl: 36rpx;
  --font-xxl: 42rpx;
  
  /* 行高 */
  --line-height-sm: 1.2;
  --line-height-md: 1.5;
  --line-height-lg: 1.8;
  
  /* 层级 */
  --z-index-normal: 1;
  --z-index-dropdown: 10;
  --z-index-sticky: 100;
  --z-index-fixed: 1000;
  --z-index-modal: 10000;
}

/* ==================== 全局重置样式 ==================== */
* {
  box-sizing: border-box;
}

page {
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 
               'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', SimSun, sans-serif;
  font-size: var(--font-md);
  line-height: var(--line-height-md);
  color: var(--text-primary);
  background-color: var(--bg-secondary);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* ==================== 通用布局类 ==================== */
.container {
  padding: var(--space-md);
}

.full-screen {
  width: 100vw;
  height: 100vh;
}

.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
